<div class="row" style="text-align:center">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <h4>List of Branch Information</h4>
        <div>
            @model IEnumerable<DotNetCoreMVC.Models.Branch>
            @{
                ViewBag.Title = "Index";
            }

            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Branch ID</th>
                        <th>Branch Name</th>
                        <th>Cluster</th>
                        <th>State</th>
                        <th>Status</th>
                        <th>Collection Branch</th>
                        <th>Tier</th>
                        <th>Region</th>
                        <th>Zone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var branch in Model)
                    {
                    <tr>
                        <td>@branch.Id</td>
                        <td>@branch.BranchId</td>
                        <td>@branch.BranchName</td>
                        <td>@branch.Cluster</td>
                        <td>@branch.State</td>
                        <td>@branch.Status</td>
                        <td>@branch.CollectionBranch</td>
                        <td>@branch.Tier</td>
                        <td>@branch.Region</td>
                        <td>@branch.Zone</td>
                        <td>
                            <a asp-action="Contact" asp-route-id="@branch.BranchId">Edit</a>
                            <a asp-action="Privacy" asp-route-id="@branch.BranchId">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>


